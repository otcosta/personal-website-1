---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "BPM Diagrams";
const description = "Business process diagrams and flows.";

// -------------------------------------------------------
// ADD YOUR DIAGRAMS HERE
// Each entry needs:
//   - id:          folder name inside public/diagrams/
//   - title:       display name in the gallery
//   - description: short description shown on the card
// -------------------------------------------------------
const diagrams = [
  {
    id: "example-process",
    title: "Example Process",
    description: "A sample business process diagram.",
  },
  // Add more like this:
  // {
  //   id: "onboarding-flow",
  //   title: "Onboarding Flow",
  //   description: "Employee onboarding step by step.",
  // },
];
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 960px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 2em 1em;
      }

      h1 {
        margin-bottom: 0.25em;
      }

      .subtitle {
        color: #666;
        font-size: 0.9em;
        margin-bottom: 2em;
      }

      /* ‚îÄ‚îÄ Gallery grid ‚îÄ‚îÄ */
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 1.2em;
      }

      .diagram-card {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 1.2em 1.4em;
        background: white;
        cursor: pointer;
        transition: border-color 0.15s, box-shadow 0.15s, transform 0.1s;
        display: flex;
        flex-direction: column;
        gap: 0.4em;
      }

      .diagram-card:hover {
        border-color: var(--accent);
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        transform: translateY(-2px);
      }

      .diagram-card.active {
        border-color: var(--accent);
        background: #fff3f0;
      }

      .card-icon {
        font-size: 1.6em;
        line-height: 1;
      }

      .card-title {
        font-weight: 700;
        font-size: 1em;
        color: #1a1a1a;
      }

      .card-desc {
        font-size: 0.82em;
        color: #777;
        line-height: 1.4;
      }

      /* ‚îÄ‚îÄ Viewer ‚îÄ‚îÄ */
      .viewer {
        display: none;
        margin-top: 2em;
        border: 2px solid var(--accent);
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 24px rgba(0,0,0,0.1);
      }

      .viewer.visible { display: block; }

      .viewer-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75em 1.2em;
        background: var(--accent);
        color: white;
      }

      .viewer-title {
        font-weight: 700;
        font-size: 0.95em;
      }

      .viewer-actions {
        display: flex;
        gap: 0.6em;
        align-items: center;
      }

      .btn-open, .btn-close {
        background: rgba(255,255,255,0.2);
        border: none;
        border-radius: 6px;
        color: white;
        font-size: 0.78em;
        padding: 0.35em 0.7em;
        cursor: pointer;
        font-family: inherit;
        transition: background 0.15s;
        text-decoration: none;
        display: inline-block;
      }

      .btn-open:hover, .btn-close:hover {
        background: rgba(255,255,255,0.35);
      }

      iframe {
        width: 100%;
        height: 70vh;
        border: none;
        display: block;
        background: #fafafa;
      }

      /* ‚îÄ‚îÄ Empty state ‚îÄ‚îÄ */
      .empty {
        text-align: center;
        padding: 3em;
        color: #aaa;
        font-size: 0.9em;
        border: 2px dashed #e0e0e0;
        border-radius: 10px;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <h1>BPM Diagrams</h1>
      <p class="subtitle">Click any diagram to view it.</p>

      {diagrams.length === 0 ? (
        <div class="empty">No diagrams yet. Add your first one following the instructions in the file.</div>
      ) : (
        <div class="gallery" id="gallery">
          {diagrams.map(d => (
            <div
              class="diagram-card"
              data-id={d.id}
              data-title={d.title}
              data-url={`/diagrams/${d.id}/index.html`}
            >
              <div class="card-icon">üóÇÔ∏è</div>
              <div class="card-title">{d.title}</div>
              <div class="card-desc">{d.description}</div>
            </div>
          ))}
        </div>
      )}

      <div class="viewer" id="viewer">
        <div class="viewer-header">
          <span class="viewer-title" id="viewerTitle"></span>
          <div class="viewer-actions">
            <a class="btn-open" id="btnOpen" href="#" target="_blank">‚Üó Open in new tab</a>
            <button class="btn-close" id="btnClose">‚úï Close</button>
          </div>
        </div>
        <iframe id="diagramFrame" title="BPM Diagram" src=""></iframe>
      </div>
    </main>
    <Footer />

    <script>
      const cards = document.querySelectorAll('.diagram-card');
      const viewer = document.getElementById('viewer');
      const frame = document.getElementById('diagramFrame');
      const viewerTitle = document.getElementById('viewerTitle');
      const btnOpen = document.getElementById('btnOpen');
      const btnClose = document.getElementById('btnClose');

      cards.forEach(card => {
        card.addEventListener('click', () => {
          // Deactivate all cards
          cards.forEach(c => c.classList.remove('active'));
          card.classList.add('active');

          const url = card.dataset.url;
          const title = card.dataset.title;

          frame.src = url;
          viewerTitle.textContent = title;
          btnOpen.href = url;

          viewer.classList.add('visible');
          viewer.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
      });

      btnClose.addEventListener('click', () => {
        viewer.classList.remove('visible');
        cards.forEach(c => c.classList.remove('active'));
        frame.src = '';
      });
    </script>
  </body>
</html>
